generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  favcoins FavCoin[]

  @@map("users")
}

model FavCoin {
  id     String @id @default(uuid())
  coin   Coin
  User   User?  @relation(fields: [userId], references: [id])
  userId String

  @@map("fav_coins")
}

enum Coin {
  BTC
  ETH
  EUR
  DOGE
  LTC
  DOT
  BNB
  USD
  SOL
}
